<header id="header" class="row">
	<nav class="navbar navbar-inverse navbar-collapse">
	  	<div class="container" style="padding-left:auto;">
			<ul class="navbar-nav" style="list-style:none;">
				<li>
					<h5>
						<%= link_to "Home", root_path, class:"navbar-brand navbar-btn" %>
					</h5>
				</li>
				<li>
					<h5>
						<%= link_to "Products", products_path, class:"navbar-brand navbar-btn" %>
					</h5>
				</li>
				<li>
					<h5>
						<%= link_to "Reviews", reviews_path, class:"navbar-brand navbar-btn" %>
					</h5>
				</li>
				<li>
					<h5>
						<% if logged_in? %>
							<%= link_to current_user.name, current_user, class:"navbar-brand navbar-btn" %>
						<% else %>
							<%= link_to "Login/Register", login_path, class:"navbar-brand navbar-btn" %>
						<% end %>
					</h5>
				</li>
				<li>
					<h5>
						<button class="cart_btn navbar-brand navbar-btn" onclick="toggleCart();">
							Cart
							<span class="badge"><%= current_user.cart.line_items.count unless current_user.cart.line_items.count <= 0 if logged_in? %></span>
						</button>
					</h5>
				</li>
	    	</ul>
		</div>
	</nav>
</header>