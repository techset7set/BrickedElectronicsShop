<li class="row reviewLine">
  <%= link_to gravatar_for(review.user, size: 60), review.user %>
  <h5 class="user"><%= link_to review.user.name, review.user %></h5>
  <h6 class="timestamp">
    Posted <%= time_ago_in_words(review.created_at) %> ago.
    &nbsp;
    <%= link_to "Edit", edit_review_path(u_id: @user, r_id: review) %>
    &nbsp;
    <%#= link_to "Delete", delete_review_path(id: review), method: :delete_review, data: { confirm: "Are you sure you want to delete this post?" } %>
    <%= link_to "Delete", delete_review_path(id: review), method: :delete, controller: :RailsController, data: { confirm: "Are you sure you want to delete this post?" } %>
    <%# Can't delete from the same page %>
    <%# Reviews don't always delete %>
  </h6>
  <% if review.created_at != review.updated_at %>
    <h6 class="timestamp">
      Edited <%= time_ago_in_words(review.updated_at) %> ago.
    </h6>
  <% end %>
  <h6 class="content"><%= review.content %></h6>
</li>