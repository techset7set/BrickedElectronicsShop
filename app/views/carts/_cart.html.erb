<div id="cart" style="display:none; position: fixed; width: 50%; height:80%; left:25%; top:10%; background-color:#ddd; padding: 10px; outline: 5px #888 solid; outline-radius: 5px; z-index:3;">
    <div class="container">
        <div class="row">
            <!--
            <div class="col-md-1 col-md-offset-1" style="padding: 10px 0 10px 0">
                <%#= button_to "Checkout", '#', onclick: "toggleCart()", class: "btn btn-disabled btn-primary" %>
            </div>
            -->
            <div class="col-md-3">
                <h4>Total: <%= number_to_currency(current_user.cart.total) %></h4>
            </div>
            <div class="col-md-3">
                <%= button_to "Empty Cart", empty_cart_path(current_user.cart), onclick: "toggleCart()", class: "btn btn-primary" %>
            </div>
        </div>
    </div>
    
    <div class="row">
        <% if current_user.cart.empty?%>
            <h5><i>Your cart is empty.</i></h5>
        <% else %>
            <ul id="cart_list">
                <%= render current_user.cart.line_items %>
            </ul>
        <% end %>
    </div>
</div>
<div id="cart_blur" style="display:none; position: fixed; width: 100%; height:100%; top: 0; left: 0; background: #000; opacity: 0.75; filter: alpha(opacity = 75); z-index:2;" onclick="toggleCart();"></div>