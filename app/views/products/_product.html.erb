<li class="row productLine">
  <%= image_tag(product.image, :alt => "Image for #{product.title}", :width => "400px", :class => "center-block") %>
  <h4 class="title center"><%= product.title %></h4>
  <h6 class="price center"><%= number_to_currency(product.price) %></h6>
  <h6 class="description"><%= product.description %></h6>
  <% if logged_in? %>
    <h2 class="review"><%= link_to "write review", 
        new_review_path(:u_id => current_user[:id], :p_id => product[:id]) %></h2>
  <% end %>
</li>