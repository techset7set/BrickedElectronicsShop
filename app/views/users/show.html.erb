<% provide(:title, @user.name) %>
<div class="container">
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h3>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h3>
      </section>
    </aside>
  </div>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_ops">
        <h4>
          <%= link_to "Edit Account", '#' %>
        </h4>
        <h4>
          <%= link_to "Log out", logout_path, method: "delete" %>
        </h4>
      </section>
    </aside>
  </div>
</div>